<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.utep.cs.cs4330.battleship.fragment.DeployAIFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="150dp">

        <TextView
            android:id="@+id/textDepMultiLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Type"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroupNetwork">

            <RadioButton
                android:id="@+id/radioBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bluetooth" />

            <RadioButton
                android:id="@+id/radioWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="WiFi" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
